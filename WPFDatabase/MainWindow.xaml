<Window x:Class="WPFDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ViewAssets" Content="See Assets" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="ViewAssets_Click"/>
        <TextBlock x:Name="AssetData" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,25,0,0" Height="384" Width="297"/>
        <Button x:Name="ViewEmployees" Content="See Employees" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Margin="351,5,0,0" Click="ViewEmployees_Click"/>
        <TextBlock x:Name="EmployeeData" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="351,25,0,0" Height="384" Width="297"/>

    </Grid>
</Window>
